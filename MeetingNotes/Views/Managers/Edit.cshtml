@model MeetingNotes.Models.ViewModels.ManagerEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
          
            <div class="form-group">
                @Html.DisplayNameFor(model => model.ManagerId)
                @Html.DisplayFor(model => model.ManagerId)
                <input type="hidden" id="ManagerId" name="SelectedManagerId" value="@Model.ManagerId" />
            </div>
            <div>
                <label>Workers:</label>
                @foreach (var worker in Model.ManagersWorkers)
                {
                    <div>
                        <input type="checkbox" id="worker_@worker.Id" name="SelectedWorkerIds" value="@worker.Id" checked = "true" />
                        <label for="worker_@worker.Id">@worker.FullName</label>
                    </div>
                }
            </div>
            <div>
                <label>Other Workers:</label>
                @foreach (var worker in Model.OtherWorkers)
                {
                    <div>
                        <input type="checkbox" id="worker_@worker.Id" name="SelectedWorkerIds" value="@worker.Id" />
                        <label for="worker_@worker.Id">@worker.FullName</label>
                    </div>
                }
            </div>

             <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
