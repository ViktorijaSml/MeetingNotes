@model MeetingNotes.Models.Manager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <input asp-for="ManagerId" class="form-control" />
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workers" class="control-label"></label>
                <input asp-for="Workers" class="form-control" />
                <span asp-validation-for="Workers" class="text-danger"></span>
            </div>
            @Html.DropDownListFor(m => m.Workers, new SelectList(Model.Workers, "firstName", "LastName"), " ")

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
